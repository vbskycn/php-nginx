# 2H4G VPS Configuration
# Optimized for 2 CPU cores, 4GB RAM - High Performance

# PHP Configuration
export PHP_MEMORY_LIMIT="512M"
export PHP_TIMEZONE="UTC"
export PHP_MAX_EXECUTION_TIME="300"
export PHP_MAX_INPUT_TIME="600"
export PHP_POST_MAX_SIZE="64M"
export PHP_UPLOAD_MAX_FILESIZE="32M"
export PHP_MAX_FILE_UPLOADS="100"
export PHP_DISPLAY_ERRORS="Off"
export PHP_LOG_ERRORS="On"
export PHP_ERROR_LOG="/dev/stderr"

# OPcache Configuration - Maximum performance
export OPCACHE_ENABLE="1"
export OPCACHE_MEMORY="256"
export OPCACHE_INTERNED_STRINGS_BUFFER="32"
export OPCACHE_MAX_ACCELERATED_FILES="16000"
export OPCACHE_REVALIDATE_FREQ="60"
export OPCACHE_FAST_SHUTDOWN="1"
export OPCACHE_ENABLE_CLI="0"

# PHP-FPM Configuration - Static mode for maximum performance
export FPM_PM_MODE="static"
export FPM_MAX_CHILDREN="40"
export FPM_START_SERVERS="40"
export FPM_MIN_SPARE_SERVERS="40"
export FPM_MAX_SPARE_SERVERS="40"
export FPM_PROCESS_IDLE_TIMEOUT="10s"
export FPM_MAX_REQUESTS="1000"
export FPM_REQUEST_TERMINATE_TIMEOUT="0"
export FPM_REQUEST_SLOWLOG_TIMEOUT="0"
export FPM_SLOWLOG="/dev/stderr"

# Nginx Configuration - Maximum performance
export NGINX_WORKER_PROCESSES="2"
export NGINX_WORKER_CONNECTIONS="4096"
export NGINX_KEEPALIVE_TIMEOUT="65"
export NGINX_KEEPALIVE_REQUESTS="100"
